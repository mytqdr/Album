<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <!-- 一个class标签对应一个实体类，name属性指定实体类名称，table属性指定关联的数据库表 -->
    <class name="net.user" table="user">
        <!-- 主键 -->
        <id name="id" column="Id">
            <generator class="increment"></generator>
        </id>
        <!-- 其他属性，name对应实体类的属性，column对应关系型数据库表的列 -->
        <property name="username" column="username"></property>
        <property name="password" column="password"></property>
		<property name="icon" column="icon"></property>
        <property name="point" column="point"></property>
		<property name="time" column="time"></property>
    </class>
	    <class name="net.replay" table="replay">
        <!-- 主键 -->
        <id name="id" column="Id">
            <generator class="increment"></generator>
        </id>
        <!-- 其他属性，name对应实体类的属性，column对应关系型数据库表的列 -->
        <property name="postid" column="postid"></property>
        <property name="poid" column="poid"></property>
		<property name="main" column="main"></property>
        <property name="time" column="time"></property>
    </class>
	
		    <class name="net.post" table="post">
        <!-- 主键 -->
        <id name="id" column="Id">
            <generator class="increment"></generator>
        </id>
        <!-- 其他属性，name对应实体类的属性，column对应关系型数据库表的列 -->
        <property name="viewers" column="viewers"></property>
        <property name="poid" column="poid"></property>
		<property name="title" column="title"></property>
        <property name="time" column="time"></property>
    </class>
	<class name="net.news" table="news">
        <!-- 主键 -->
        <id name="id" column="Id">
            <generator class="increment"></generator>
        </id>
        <!-- 其他属性，name对应实体类的属性，column对应关系型数据库表的列 -->
        <property name="main" column="main"></property>
        <property name="poid" column="poid"></property>
		<property name="title" column="title"></property>
        <property name="time" column="time"></property>
    </class>
</hibernate-mapping>
